<header>
    <nav class="navbar fixed-top navbar-expand-md navbar-dark bg-lightblack" id="scrollspyNav">
        <a class="navbar-brand text-darkred" href="{{ path('homepage') }}">FLG</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#headerNav" aria-controls="mainNav" aria-expanded="false" aria-label="{{ 'toggle_navigation' | trans }}">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="headerNav">
            <ul class="navbar-nav mr-auto" id="mainNav">
                <li class="nav-item">
                    <a class="nav-link" href="#about">{{ 'about' | trans }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#projects">{{ 'projects' | trans }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#skills">{{ 'skills' | trans }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#contact">{{ 'contact' | trans }}</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item {% if app.request.locale != 'fr' %}active{% endif %}">
                    <a class="nav-link" href="{{ path('change_language', {'locale': 'en'}) }}" title="{{ 'french' | trans }}">
                        EN
                    </a>
                </li>
                <li class="nav-item {% if app.request.locale == 'fr' %}active{% endif %}">
                    <a class="nav-link" href="{{ path('change_language', {'locale': 'fr'}) }}" title="{{ 'english' | trans }}">
                        FR
                    </a>
                </li>
            </ul>
        </div>
    </nav>
</header>
